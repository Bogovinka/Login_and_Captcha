<Window x:Class="Login_and_Captcha.Captcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login_and_Captcha"
        mc:Ignorable="d"
        Title="Capcha" WindowStartupLocation="CenterScreen" Height="300" Width="400">
    <Grid Background="#FFBDB5C7">
        <Grid.RowDefinitions>
            <RowDefinition Height="76*"/>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="37*"/>
        </Grid.RowDefinitions>
        <Image Name="cimg"></Image>
        <TextBox x:Name="ctext" Grid.Row="1" VerticalAlignment="Center" Margin="30,0,30,0"></TextBox>
        <Button x:Name="rel"  Grid.Row="2" Margin="10,0,0,0" Width="100" HorizontalAlignment="Left" Click="rel_Click">Обновить</Button>
        <Button x:Name="ok" Click="ok_Click" Grid.Row="2" Margin="0,0,10,0" Width="100" HorizontalAlignment="Right">ОК</Button>
    </Grid>
</Window>
